@model Hotel_Reservations_Manager.Models.RoomsModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="text-center">
        <div class="form-content">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="RoomID" class="control-label"></label>
                    <input asp-for="RoomID" class="form-control" />
                    <span asp-validation-for="RoomID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select class="form-control" asp-for="Type">
                        <option value="Стая с две единични легла">Стая с две единични легла</option>
                        <option value="Апартамент">Апартамент</option>
                        <option value="Стая с двойно легло">Стая с двойно легло</option>
                        <option value="Пентхаус">Пентхаус</option>
                        <option value="Мезонет">Мезонет</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdoultPrice" class="control-label"></label>
                    <input asp-for="AdoultPrice" class="form-control" />
                    <span asp-validation-for="AdoultPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KidsPrice" class="control-label"></label>
                    <input asp-for="KidsPrice" class="form-control" />
                    <span asp-validation-for="KidsPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input style="width: 6rem;" type="submit" value="Промени" class="crt-btn" />
                    <a style="width: 6rem; text-decoration: none; color:white;" asp-action="Index" class="crt-btn">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>
<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
